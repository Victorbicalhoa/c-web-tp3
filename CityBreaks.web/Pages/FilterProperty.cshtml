@page
@model CityBreaks.Web.Pages.FilterPropertiesModel
@{
    ViewData["Title"] = "Filtrar Propriedades";
}

<h2>Filtrar Propriedades</h2>

<form method="get" class="mb-4">
    <div>
        <label for="propertyName">Nome da Propriedade:</label>
        <input type="text" name="propertyName" id="propertyName" value="@Model.PropertyName" />
    </div>
    <div>
        <label for="cityName">Cidade:</label>
        <input type="text" name="cityName" id="cityName" value="@Model.CityName" />
    </div>
    <div>
        <label for="minPrice">Preço Mínimo:</label>
        <input type="number" step="0.01" name="minPrice" id="minPrice" value="@Model.MinPrice" />
    </div>
    <div>
        <label for="maxPrice">Preço Máximo:</label>
        <input type="number" step="0.01" name="maxPrice" id="maxPrice" value="@Model.MaxPrice" />
    </div>
    <button type="submit">Filtrar</button>
</form>

@if (Model.Properties?.Any() == true)
{
    <h3>Resultados:</h3>
    <ul>
        @foreach (var property in Model.Properties)
        {
            <li>
                <strong>@property.Name</strong> - @property.City?.Name (@property.City?.Country?.CountryName) -
                R$ @property.PricePerNight
            </li>
        }
    </ul>
}
else
{
    <p>Nenhuma propriedade encontrada com os filtros informados.</p>
}
