@page
@model CityBreaks.Web.Pages.CityDetailsModel
@{
    ViewData["Title"] = "Detalhes da Cidade";
}

<h2>@Model.City?.Name - @Model.City?.Country.CountryName</h2>

@if (Model.City?.Properties?.Any() ?? false)
{
    <ul>
        @foreach (var property in Model.City.Properties)
        {
            <li>
                <strong>@property.Name</strong> – @property.PricePerNight.ToString("C")
            </li>
        }
    </ul>
}
else
{
    <p>Nenhuma propriedade cadastrada.</p>
}
